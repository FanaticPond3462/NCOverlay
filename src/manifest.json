{
  "manifest_version": 3,
  "name": "NCOverlay",
  "description": "動画配信サービスの再生画面にニコニコのコメントを表示する拡張機能",
  "version": "0.0.4",

  "action": {
    "default_title": "NCOverlay",
    "default_popup": "popup/index.html"
  },

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": ["content_script.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://www.amazon.co.jp/*"],
      "css": ["styles/primeVideo.css"]
    },
    {
      "matches": ["https://animestore.docomo.ne.jp/*"],
      "css": ["styles/dAnime.css"]
    },
    {
      "matches": ["https://abema.tv/*"],
      "css": ["styles/abema.css"]
    }
  ],

  "host_permissions": ["https://*/*"],

  "permissions": ["declarativeContent", "storage", "scripting"],

  "minimum_chrome_version": "93"
}
