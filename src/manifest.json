{
  "manifest_version": 3,
  "name": "NCOverlay",
  "description": "動画配信サービスの再生画面にニコニコのコメントを表示する拡張機能",
  "version": "1.3.0",
  "homepage_url": "https://chromewebstore.google.com/detail/ofhffkmglkibpkgcfhbgajghlkgplafe",

  "icons": {
    "16": "assets/images/icon_16.png",
    "32": "assets/images/icon_32.png",
    "48": "assets/images/icon_48.png",
    "128": "assets/images/icon_128.png"
  },

  "action": {
    "default_title": "NCOverlay",
    "default_popup": "popup/index.html"
  },

  "side_panel": {
    "default_path": "side_panel/index.html"
  },

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": [
        "https://www.amazon.co.jp/*",
        "https://animestore.docomo.ne.jp/*",
        "https://abema.tv/*"
      ],
      "js": ["content_script.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://www.amazon.co.jp/*"],
      "css": ["styles/vod/primeVideo.css"]
    },
    {
      "matches": ["https://animestore.docomo.ne.jp/*"],
      "css": ["styles/vod/dAnime.css"]
    },
    {
      "matches": ["https://abema.tv/*"],
      "css": ["styles/vod/abema.css"]
    }
  ],

  "permissions": ["storage", "tabs", "sidePanel"],

  "host_permissions": ["https://*.nicovideo.jp/*"],

  "minimum_chrome_version": "114"
}
